{
  "name": "@drunk-pulumi/azure-components",
  "version": "1.0.0",
  "description": "The custom components for Pulumi Azure",
  "main": "index.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/baoduy/drunk-pulumi-azure-components.git"
  },
  "scripts": {
    "fastBuild": "cross-env NODE_ENV=production && NODE_OPTIONS=\"--max-old-space-size=8192\" npx tsc",
    "fix-issue": "ts-node .tasks/fix-issues.ts",
    "build": "npm run update-tsconfig && npm run fix-issue && npm run fastBuild && npm run copy-pkg",
    "copy-pkg": "ts-node ./.tasks/npm-package.ts && cpy README.md bin/ && cpy PulumiPlugin.yaml bin/",
    "update-tsconfig": "ts-node ./.tasks/update-tsconfig.ts",
    "update": "npx npm-check-updates -u -y && pnpm install"
  },
  "keywords": [],
  "author": "Steven Hoang",
  "license": "MIT",
  "dependencies": {
    "@openpgp/web-stream-tools": "^0.1.3",
    "@pulumi/azure-native": "^3.2.0",
    "@pulumi/pulumi": "^3.163.0",
    "openpgp": "^6.1.0"
  },
  "devDependencies": {
    "@types/node": "22.15.0",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3",
    "cpy-cli": "^5.0.0"
  },
  "prettier": {
    "singleQuote": true
  },
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix"
    ]
  }
}